<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <!-- Не для windows -->
    <changeSet id="001-create-skladok-table" author="alexey">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="skladok"/>
        </preConditions>
        <createTable tableName="skladok">
            <column name="pk_skladok" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="item_color" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="material_percentage" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="units" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

